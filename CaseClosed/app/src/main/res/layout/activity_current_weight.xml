<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentWeightActivity">

    <ImageView
        android:id="@+id/bag_id"
        android:layout_width="128dp"
        android:layout_height="102dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baggage_blue" />

    <TextView
        android:id="@+id/currentWeightMeasurement_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Weight Measurement"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bag_id"
        tools:layout_editor_absoluteY="195dp" />

    <TextView
        android:id="@+id/showFirebaseWeight_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/currentWeightMeasurement_id"
        app:layout_constraintBottom_toTopOf="@id/changeThreshold_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="288dp" />

    <Button
        android:id="@+id/changeThreshold_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Threshold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/showFirebaseWeight_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="382dp" />

    <TextView
        android:id="@+id/thresholdView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="457dp" />


</android.support.constraint.ConstraintLayout>