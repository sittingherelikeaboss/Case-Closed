<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
      android:id="@+id/showFirebaseWeight_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="35dp"
      android:layout_marginTop="510dp"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="40dp"
      android:layout_marginRight="10dp"
      app:layout_constraintTop_toBottomOf="@id/currentWeightMeasurement_id"
      app:layout_constraintBottom_toTopOf="@id/changeThreshold_id"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      tools:layout_editor_absoluteX="162dp"
      tools:layout_editor_absoluteY="288dp" />


  <TextView
      android:id="@+id/thresholdView_id"
      android:textSize="35dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="263dp"
      android:layout_marginTop="510dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:layout_editor_absoluteX="169dp"
      tools:layout_editor_absoluteY="457dp" />

  <ProgressBar
      android:id="@+id/weightProgressBar"
      style="?android:progressBarStyleHorizontal"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="500dp"
      android:layout_marginEnd="125dp"
      android:layout_marginBottom="306dp"
      android:progress="20"
      android:progressDrawable="@drawable/circle" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_marginLeft="90dp"
      android:layout_marginTop="390dp"
      android:layout_width="70dp"
      android:layout_height="57dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="46dp"
      android:layout_marginEnd="295dp"
      android:layout_marginBottom="115dp"
      app:srcCompat="@drawable/scale" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="67dp"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="264dp"
      android:layout_marginTop="386dp"
      android:layout_marginEnd="80dp"
      android:layout_marginBottom="121dp"
      app:srcCompat="@drawable/threshold" />


</RelativeLayout>
